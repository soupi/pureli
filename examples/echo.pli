; echo program

(module main)

(require "stdlib/std.pli" std (bind!))

(define main
   (do!
     [print! "echo program"]
     [print! "to terminate, press ^C"]
     [letrec
       ([go!
          (lambda ()
            (do!
              [std/bind! (read!) print!]
              [go!]))])
       (go!)]))
